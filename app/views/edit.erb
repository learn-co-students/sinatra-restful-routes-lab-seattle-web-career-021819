<h1>Your Recipe- Edit Page</h1>


<form action="/recipes/<%= @lookup_recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="recipe[name]">Name:</label>
  <input type="text" name="recipe[name]" value=" <%= @lookup_recipe.name %>" id="name">
  <label for="recipe[ingredients]">Ingredients:</label>
  <input type="text" name="recipe[ingredients]" value=" <%= @lookup_recipe.ingredients %>" id="ingredients">
  <label for="recipe[cook_time]">Cook Time:</label>
  <input type="text" name="recipe[cook_time]" value=" <%= @lookup_recipe.cook_time %>" id="cook_time">
  <input type="submit" name="" value="submit" id="Submit">
</form>
